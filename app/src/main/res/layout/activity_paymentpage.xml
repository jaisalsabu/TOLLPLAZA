<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".Paymentpage">

    <LinearLayout
        android:layout_width="405dp"
        android:layout_height="728dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="3dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="116dp"
            android:layout_height="135dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:tint="#ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/paymentmethod" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="274dp"
            android:layout_height="65dp"
            android:text="USER ID"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="207dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="274dp"
            android:layout_height="65dp"
            android:text="TOLL ID"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="207dp" />

        <TextView
            android:id="@+id/type0"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Type of Vehicle"
            android:textColor="#ffffff"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="207dp" />
        <Spinner
            android:id="@+id/type"
            android:layout_width="268dp"
            android:layout_height="57dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            />


        <EditText
            android:id="@+id/editText9"
            android:layout_width="269dp"
            android:layout_height="63dp"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:hint="Vehicle Number(KL-23-C-5467)"
            android:inputType="textPersonName"
            android:textColorHint="#ffffff"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="452dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay"
            android:layout_marginTop="30dp"
            android:background="@drawable/btnrnd"
            android:layout_gravity="center_horizontal"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="589dp" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>